<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team1_5115.cscc_laundryapp.MaintenanceDryer">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2" >

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="205dp"
            android:layout_weight="1"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dryers"
                android:id="@+id/textView4"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="25dp"
                android:typeface="normal"
                android:outlineProvider="background"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TableLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="1"
                android:measureWithLargestChild="false"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView4"
                android:layout_toEndOf="@+id/textView4">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:measureWithLargestChild="false"
                    android:touchscreenBlocksFocus="false"
                    android:nestedScrollingEnabled="false"
                    android:weightSum="1"
                    android:gravity="center_horizontal" >

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="1"
                        android:id="@+id/main_dryer_1"
                        android:background="@mipmap/ic_launcher"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal"
                        android:layout_column="0"
                        android:nestedScrollingEnabled="false"
                        android:onClick="onMachineClicked" />

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="2"
                        android:id="@+id/main_dryer_2"
                        android:background="@mipmap/ic_launcher"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal"
                        android:layout_column="1"
                        android:nestedScrollingEnabled="false"
                        android:onClick="onMachineClicked" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="0min"
                        android:id="@+id/main_dryer1_text"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="1min"
                        android:id="@+id/main_dryer2_text"
                        android:gravity="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal" >

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="3"
                        android:id="@+id/main_dryer_3"
                        android:background="@mipmap/ic_launcher"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal"
                        android:layout_column="0"
                        android:nestedScrollingEnabled="false"
                        android:onClick="onMachineClicked" />

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="4"
                        android:id="@+id/main_dryer_4"
                        android:background="@mipmap/ic_launcher"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal"
                        android:layout_column="1"
                        android:nestedScrollingEnabled="false"
                        android:onClick="onMachineClicked" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Free"
                        android:id="@+id/main_dryer3_text"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Free"
                        android:id="@+id/main_dryer4_text"
                        android:gravity="center" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Issues"
                android:id="@+id/maintenance_text_issue"
                android:textSize="20dp"
                android:layout_gravity="left" />

            <Space
                android:layout_width="20px"
                android:layout_height="5dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Improper water drainage"
                    android:id="@+id/radioButton"
                    android:checked="true"
                    android:button="@null"
                    android:background="@drawable/my_radio_button"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:drawableTint="#54D959"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold"
                    style="@android:style/TextAppearance.Holo.Widget" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Error message"
                    android:id="@+id/radioButton2"
                    android:checked="false"
                    android:background="@drawable/my_radio_button"
                    android:button="@null"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:drawableTint="#54D959"
                    android:layout_marginTop="5dp"
                    style="@android:style/TextAppearance.Holo.Widget" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Request refund"
                    android:id="@+id/radioButton3"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/my_radio_button"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:drawableTint="#54D959"
                    android:layout_marginTop="5dp"
                    style="@android:style/TextAppearance.Holo.Widget" />

            </RadioGroup>

            <Space
                android:layout_width="20px"
                android:layout_height="10dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/maintence_comment"
                android:background="@drawable/my_edit_text_background"
                android:hint="Additional Comments (Optional)"
                android:textSize="15dp"
                android:gravity="top"
                style="@android:style/Widget.Holo.EditText" />

        </LinearLayout>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/cycle_button_cancel"
                android:background="@drawable/my_round_button_background_3"
                style="@android:style/Widget.Holo"
                android:textColor="#5c5c5c"
                android:layout_weight="0.9" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/cycle_button_submit"
                android:background="@drawable/my_round_button_background_2"
                style="@android:style/Widget.Holo"
                android:textColor="#DFE6FE"
                android:layout_weight="0.9" />
        </TableRow>
    </LinearLayout>
</LinearLayout>