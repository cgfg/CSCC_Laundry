<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Washers"
                android:id="@+id/selected_machine_type"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textSize="25dp"
                android:typeface="normal"
                android:outlineProvider="background" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="1"
                        android:id="@+id/washer_1"
                        android:background="@drawable/w_busy"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:paddingTop="10dp"
                        android:alpha="0.2" />

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="2"
                        android:id="@+id/washer_2"
                        android:background="@drawable/w_busy"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:paddingTop="10dp"
                        android:alpha="0.2" />

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="3"
                        android:id="@+id/washer_3"
                        android:background="@drawable/w_free"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:paddingTop="10dp"
                        android:alpha="0.2" />

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:id="@+id/washer_4"
                        android:background="@drawable/w_broken"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:paddingTop="10dp"
                        android:alpha="0.2"
                        android:text="4" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="1min"
                        android:id="@+id/textView7"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="2min"
                        android:id="@+id/textView8"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Free"
                        android:id="@+id/textView9"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Broken"
                        android:id="@+id/textView10"
                        android:gravity="center" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Cycle"
                android:id="@+id/maintenance_text_issue"
                android:textSize="20dp"
                android:layout_gravity="left" />

            <Space
                android:layout_width="20px"
                android:layout_height="5dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/cycle_radioGroup">

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Whites"
                    android:id="@+id/radioButton"
                    android:checked="true"
                    android:button="@null"
                    android:background="@drawable/my_radio_button"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:drawableTint="#54D959"
                    android:layout_marginTop="0dp"
                    android:textStyle="bold"
                    style="@android:style/TextAppearance.Holo.Widget" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Colors"
                    android:id="@+id/radioButton2"
                    android:checked="false"
                    android:background="@drawable/my_radio_button"
                    android:button="@null"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:drawableTint="#54D959"
                    android:layout_marginTop="5dp"
                    style="@android:style/TextAppearance.Holo.Widget" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Perm Press"
                    android:id="@+id/radioButton3"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/my_radio_button"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:drawableTint="#54D959"
                    android:layout_marginTop="5dp"
                    style="@android:style/TextAppearance.Holo.Widget" />

                <RadioButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Delicates"
                    android:id="@+id/radioButton4"
                    android:checked="false"
                    android:button="@null"
                    android:background="@drawable/my_radio_button"
                    android:textSize="18dp"
                    android:drawableRight="@drawable/abc_btn_radio_material"
                    android:drawableTint="#54D959"
                    android:layout_marginTop="5dp"
                    style="@android:style/TextAppearance.Holo.Widget" />

            </RadioGroup>

            <Space
                android:layout_width="20px"
                android:layout_height="15dp" />

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Super Cycle"
                    android:textSize="22dp"
                    android:textStyle="bold"
                    android:textColor="#000000" />

                <ToggleButton
                    android:text="Super Cycle"
                    android:id="@+id/chkState3"
                    android:layout_width="40dp"
                    android:layout_height="20dp"
                    android:background="@drawable/toggle_on_off_selector"
                    android:textOff=""
                    android:textOn=""
                    android:layout_gravity="center_vertical|right" />
            </GridLayout>

            <View
                android:id="@+id/hDottedLine"
                android:background="@drawable/dotted"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layerType="software" />

        </LinearLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/cycle_button_cancel"
                android:background="@drawable/my_round_button_background_3"
                style="@android:style/Widget.Holo"
                android:textColor="#5c5c5c"
                android:layout_weight="0.9" />

            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.2" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Submit"
                android:id="@+id/cycle_button_submit"
                android:background="@drawable/my_round_button_background_2"
                style="@android:style/Widget.Holo"
                android:textColor="#DFE6FE"
                android:layout_weight="0.9" />
        </TableRow>

    </LinearLayout>

</LinearLayout>