<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team1_5115.cscc_laundryapp.MainStatus"
    android:clickable="false"
    >

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dryer1Button"
        android:clickable="true"
        android:src="@drawable/dryer_available"
        android:maxWidth="110dp"
        android:maxHeight="110dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:onClick="machineClickHandler"
        android:background="#00000000"
        android:contextClickable="false"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dryer2Button"
        android:clickable="true"
        android:src="@drawable/dryer_broken"
        android:maxWidth="110dp"
        android:maxHeight="110dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:onClick="machineClickHandler"
        android:background="#00000000"
        android:layout_alignTop="@+id/dryer1Button"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dryer3Button"
        android:clickable="true"
        android:src="@drawable/dryer_busy"
        android:maxWidth="110dp"
        android:maxHeight="110dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:onClick="machineClickHandler"
        android:background="#00000000"
        android:layout_alignTop="@+id/dryer4Button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dryer4Button"
        android:clickable="true"
        android:src="@drawable/dryer_locked"
        android:maxWidth="110dp"
        android:maxHeight="110dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:onClick="machineClickHandler"
        android:background="#00000000"
        android:layout_alignTop="@+id/washer2Button"
        android:layout_alignLeft="@+id/dryer2Button"
        android:layout_alignStart="@+id/dryer2Button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/washer1Button"
        android:clickable="true"
        android:src="@drawable/washer_locked"
        android:maxWidth="110dp"
        android:maxHeight="110dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:onClick="machineClickHandler"
        android:background="#00000000"
        android:layout_alignTop="@+id/dryer2Button"
        android:layout_alignLeft="@+id/washer2Button"
        android:layout_alignStart="@+id/washer2Button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/washer2Button"
        android:clickable="true"
        android:src="@drawable/washer_busy"
        android:maxWidth="110dp"
        android:maxHeight="110dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:onClick="machineClickHandler"
        android:background="#00000000"
        android:layout_below="@+id/dryer2Button"
        android:layout_alignLeft="@+id/washer3Button"
        android:layout_alignStart="@+id/washer3Button" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/washer3Button"
        android:clickable="true"
        android:src="@drawable/washer_available"
        android:maxWidth="110dp"
        android:maxHeight="110dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:onClick="machineClickHandler"
        android:background="#00000000"
        android:layout_below="@+id/dryer4Button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/washer4Button"
        android:clickable="true"
        android:src="@drawable/washer_broken"
        android:maxWidth="110dp"
        android:maxHeight="110dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:onClick="machineClickHandler"
        android:background="#00000000"
        android:layout_below="@+id/washer3Button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Dryers"
        android:id="@+id/textView2"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Washers"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignLeft="@+id/washer1Button"
        android:layout_alignStart="@+id/washer1Button" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignBottom="@+id/washer4Button"
        android:background="#11111111"
        android:layout_toStartOf="@+id/washer3Button"
        android:layout_toLeftOf="@+id/washer3Button"
        android:layout_alignRight="@+id/dryer4Button"
        android:layout_alignEnd="@+id/dryer4Button"
        android:id="@+id/linearLayout"
        android:layout_alignTop="@+id/washer3Button"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="My Time Machine"
            android:id="@+id/textView4"
            android:textStyle="bold"
            android:textSize="22dp" />
    </LinearLayout>

</RelativeLayout>
