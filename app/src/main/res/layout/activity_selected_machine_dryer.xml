<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team1_5115.cscc_laundryapp.SelectedMachineActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2"
        android:id="@+id/linearLayout">


        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_weight="1"
            android:layout_marginTop="0dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dryers"
                android:id="@+id/textView4"
                android:paddingBottom="0dp"
                android:paddingTop="0dp"
                android:textSize="25dp"
                android:typeface="normal"
                android:outlineProvider="background"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TableLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:weightSum="1"
                android:measureWithLargestChild="false"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/textView4"
                android:layout_toEndOf="@+id/textView4">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:measureWithLargestChild="false"
                    android:touchscreenBlocksFocus="false"
                    android:nestedScrollingEnabled="false"
                    android:weightSum="1"
                    android:gravity="center_horizontal" >

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="1"
                        android:id="@+id/main_dryer_1"
                        android:background="@drawable/d_busy"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal"
                        android:layout_column="0"
                        android:nestedScrollingEnabled="false"
                        android:onClick="onMachineClicked"
                        android:paddingTop="10dp" />

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="2"
                        android:id="@+id/main_dryer_2"
                        android:background="@drawable/d_busy"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal"
                        android:layout_column="1"
                        android:nestedScrollingEnabled="false"
                        android:onClick="onMachineClicked"
                        android:paddingTop="10dp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="0min"
                        android:id="@+id/main_dryer1_text"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="1min"
                        android:id="@+id/main_dryer2_text"
                        android:gravity="center" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal" >

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:text="3"
                        android:id="@+id/main_dryer_3"
                        android:background="@drawable/d_free"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal"
                        android:layout_column="0"
                        android:nestedScrollingEnabled="false"
                        android:onClick="onMachineClicked"
                        android:paddingTop="10dp" />

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="85dp"
                        android:layout_height="85dp"
                        android:id="@+id/main_dryer_4"
                        android:background="@drawable/d_broken"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal"
                        android:layout_column="1"
                        android:nestedScrollingEnabled="false"
                        android:onClick="onMachineClicked"
                        android:paddingTop="10dp" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Free"
                        android:id="@+id/main_dryer3_text"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="85dp"
                        android:layout_height="wrap_content"
                        android:text="Broken"
                        android:id="@+id/main_dryer4_text"
                        android:gravity="center" />
                </TableRow>
            </TableLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="QUICK START"
                android:id="@+id/quick_cycle_button"
                style="@android:style/Widget.Holo"
                android:shadowRadius="0"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:shadowColor="#CCCCCB"
                android:background="@drawable/my_round_button_background_2"
                android:textSize="15dp"
                android:onClick="onCycleSelected" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SELECT CYCLE"
                android:id="@+id/selected_cycle_button"
                style="@android:style/Widget.Holo"
                android:shadowRadius="0"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:shadowColor="#CCCCCB"
                android:background="@drawable/my_round_button_background_2"
                android:textSize="15dp"
                android:onClick="onCycleSelected" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAINTENANCE"
                android:id="@+id/maintenance_button"
                style="@android:style/Widget.Holo"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:shadowColor="#CCCCCB"
                android:background="@drawable/my_round_button_background_2"
                android:textSize="15dp"
                android:onClick="onMaintenanceSelected" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOTIFY USER"
                android:id="@+id/notify_user_button"
                style="@android:style/Widget.Holo"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:shadowColor="#CCCCCB"
                android:background="@drawable/my_round_button_background_1"
                android:textSize="15dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
