<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team1_5115.cscc_laundryapp.SelectedMachineActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="2" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Washers"
                android:id="@+id/textView6"
                android:paddingBottom="15dp"
                android:paddingTop="15dp"
                android:textSize="25dp"
                android:typeface="normal"
                android:outlineProvider="background" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center" >

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="1"
                        android:id="@+id/button4"
                        android:background="@mipmap/ic_launcher"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal" />

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="2"
                        android:id="@+id/button5"
                        android:background="@mipmap/ic_launcher"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal" />

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="3"
                        android:id="@+id/button6"
                        android:background="@mipmap/ic_launcher"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal" />

                    <Button
                        style="@android:style/Widget.DeviceDefault.Light.Button.Borderless.Small"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:text="4"
                        android:id="@+id/button7"
                        android:background="@mipmap/ic_launcher"
                        android:elegantTextHeight="false"
                        android:textSize="30dp"
                        android:shadowColor="@color/button_material_dark"
                        android:typeface="normal" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center" >

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="1min"
                        android:id="@+id/textView7"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="2min"
                        android:id="@+id/textView8"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="Free"
                        android:id="@+id/textView9"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="broken"
                        android:id="@+id/textView10"
                        android:gravity="center" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="60dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Cycle"
                android:id="@+id/selected_cycle_button"
                style="@android:style/TextAppearance.Holo.Widget"
                android:shadowRadius="10"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:shadowColor="#8c96cc"
                android:background="@drawable/my_round_button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MAINTENANCE"
                android:id="@+id/maintenance_button"
                style="@android:style/TextAppearance.Holo.Widget"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:shadowColor="#8c96cc"
                android:background="@drawable/my_round_button" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOTIFY USER"
                android:id="@+id/notify_user_button"
                style="@android:style/TextAppearance.Holo.Widget"
                android:padding="20dp"
                android:layout_margin="10dp"
                android:textColor="#ffffff"
                android:shadowColor="#8c96cc"
                android:background="@drawable/my_round_button" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
